<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme for dark mode -->
    <style name="Base.Theme.MiddleCourseProject" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Window background (primary app background) -->
        <item name="android:windowBackground">@color/main_background</item>

        <!-- Material3 background colors -->
        <item name="backgroundColor">@color/main_background</item>
        <item name="colorSurface">@color/main_background</item>
        <item name="colorSurfaceVariant">@color/card_background</item>
        <item name="colorOnSurface">@color/white</item>

        <!-- Text and other colors -->
        <item name="colorPrimary">@color/main_red1</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/main_red</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="cardBackgroundColor">@color/black</item>
    </style>

    <style name="Theme.MiddleCourseProject" parent="Base.Theme.MiddleCourseProject" />

    <!-- Other styles -->
</resources>