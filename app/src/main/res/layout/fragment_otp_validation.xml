<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/otpRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="#FDF5F7">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/otpImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/otpTitle"
        android:src="@drawable/logo"
        />

    <!-- Title -->
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/otpTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/enter_otp"
        android:textSize="22sp"
        android:textStyle="bold"
        android:gravity="center"
        android:fontFamily="sans-serif-medium"
        app:layout_constraintTop_toBottomOf="@+id/otpImage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/otpContainer"/>



    <!-- OTP input container -->
    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/otpContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@id/otpTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/timerTextView">

        <!-- OTP Digit 1 -->
        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/otpDigit1"
            style="?android:attr/editTextStyle"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="1"
            android:background="@drawable/otp_input_background"
            android:textSize="18sp"
            android:imeOptions="actionNext"/>

        <!-- OTP Digit 2 -->
        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/otpDigit2"
            style="?android:attr/editTextStyle"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="8dp"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="1"
            android:background="@drawable/otp_input_background"
            android:textSize="18sp"
            android:imeOptions="actionNext"/>

        <!-- OTP Digit 3 -->
        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/otpDigit3"
            style="?android:attr/editTextStyle"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="8dp"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="1"
            android:background="@drawable/otp_input_background"
            android:textSize="18sp"
            android:imeOptions="actionNext"/>

        <!-- OTP Digit 4 -->
        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/otpDigit4"
            style="?android:attr/editTextStyle"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="8dp"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="1"
            android:background="@drawable/otp_input_background"
            android:textSize="18sp"
            android:imeOptions="actionDone"/>
    </androidx.appcompat.widget.LinearLayoutCompat>

    <!-- Countdown Timer -->
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/timerTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="03:00"
        android:textSize="16sp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/otpContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/errorTextView"/>

    <!-- Error Message -->
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/errorTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="#8C1D2F"
        android:textSize="18sp"
        android:text=""
        android:gravity="center"

        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/timerTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/resendButtonContainer"/>

    <FrameLayout
        android:id="@+id/resendButtonContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/errorTextView">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/resendButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/resend_otp"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:fontFamily="sans-serif-medium"
            android:background="@drawable/register_button"
            />
        <ProgressBar
            android:id="@+id/otpButtonLoader"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:indeterminateTint="@color/white"
            android:visibility="gone"

            />
    </FrameLayout>



</androidx.constraintlayout.widget.ConstraintLayout>
