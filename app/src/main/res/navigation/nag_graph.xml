<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/loginFragment">


    <fragment
        android:id="@+id/registerFragment"
        android:name="com.example.middlecourseproject.presentation.auth.register.RegisterFragment"
        android:label="fragment_register"
        tools:layout="@layout/fragment_register" >

        <action
            android:id="@+id/action_registerFragment_to_otpValidation"
            app:destination="@id/otpValidation"
            app:popUpTo="@id/registerFragment"
            app:popUpToInclusive="true"/>

    </fragment>
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.middlecourseproject.presentation.auth.logIn.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/action_loginFragment_to_home2"
            app:destination="@id/home2"
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="true"/>
        <action
            android:id="@+id/action_loginFragment_to_registerFragment"
            app:destination="@id/registerFragment"
            />

<!--                <action-->
<!--            android:id="@+id/action_loginFragment_to_detailsFragment"-->
<!--            app:destination="@id/detailsFragment" />-->
<!--        <action-->
<!--            android:id="@+id/action_loginFragment_to_otpValidation"-->
<!--            app:destination="@id/otpValidation" />-->
    </fragment>
    <fragment
        android:id="@+id/home2"
        android:name="com.example.middlecourseproject.presentation.food.home.Home"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_home2_to_dishFragment"
            app:destination="@id/dishFragment" />
        <action
            android:id="@+id/action_home2_to_profileFragment"
            app:destination="@id/profileFragment" />
    </fragment>
    <fragment
        android:id="@+id/otpValidation"
        android:name="com.example.middlecourseproject.presentation.auth.otpValidation.OtpValidationFragment"
        android:label="fragment_otp_validation"
        tools:layout="@layout/fragment_otp_validation" >

        <action
            android:id="@+id/action_otpValidation_to_detailsFragment"
            app:destination="@id/detailsFragment"
            app:popUpTo="@id/otpValidation"
            app:popUpToInclusive="true"/>

        <argument
            android:name="email"
            app:argType="string" />
        <argument
            android:name="userName"
            app:argType="string" />
        <argument
            android:name="password"
            app:argType="string" />

    </fragment>
    <fragment
        android:id="@+id/detailsFragment"
        android:name="com.example.middlecourseproject.presentation.auth.details.DetailsFragment"
        android:label="fragment_details"
        tools:layout="@layout/fragment_details" >
        <action
            android:id="@+id/action_detailsFragment_to_home2"
            app:destination="@id/home2"
            app:popUpTo="@id/detailsFragment"
            app:popUpToInclusive="true"/>
    </fragment>
    <fragment
        android:id="@+id/dishFragment"
        android:name="com.example.middlecourseproject.presentation.food.dish.DishFragment"
        android:label="fragment_dish"
        tools:layout="@layout/fragment_dish" >
        <argument
            android:name="id"
            app:argType="string" />
    </fragment>
    <fragment
        android:id="@+id/profileFragment"
        android:name="com.example.middlecourseproject.presentation.profile.ProfileFragment"
        android:label="fragment_profile"
        tools:layout="@layout/fragment_profile" >
        <action
            android:id="@+id/action_profileFragment_to_loginFragment"
            app:destination="@id/loginFragment"
            app:popUpTo="@id/profileFragment"
            app:popUpToInclusive="true"
            />
    </fragment>


</navigation>